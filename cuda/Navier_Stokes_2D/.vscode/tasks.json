                //include eigen
                "-I", "C:/Users/vanho/Desktop/GitHub/HPC/cuda/RedOrdMod/eigen/",

                // Library directories
                "-L", "glew-2.1.0/lib/Release/x64",
                "-L", "glfw-3.4.bin.WIN64/lib-vc2019",

                // Linker options
                "-lglew32",
                "-lglfw3",
                "-lopengl32",
                "-lgdi32",
                "-luser32",
                "-lshell32",
                "-lkernel32",
                "-ladvapi32",
                "-lole32",
                "-lwinmm",
                "-lcomdlg32",
                "-lcusolver",

                // CUDA libraries
                "-lcurand",

                // Instruct the host compiler to use the multithreaded DLL runtime
